<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textForm"
        android:layout_width="407dp"
        android:layout_height="65dp"
        android:gravity="center"
        android:text="FORMULARIO"
        android:textSize="30dp"
        android:backgroundTint="@color/cardview_shadow_end_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/textNomb"
        android:layout_width="378dp"
        android:layout_height="43dp"
        android:gravity="center_vertical"
        android:hint="Nombre"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textForm"
        app:layout_constraintVertical_bias="0.0" />
    <EditText
        android:id="@+id/textApe"
        android:layout_width="378dp"
        android:layout_height="43dp"
        android:gravity="center_vertical"
        android:hint="Apellido"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textNomb"
        app:layout_constraintVertical_bias="0.0" />
    <EditText
        android:id="@+id/textFecNac"
        android:layout_width="378dp"
        android:layout_height="43dp"
        android:gravity="center_vertical"
        android:hint="Fecha nacimiento"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textApe"
        app:layout_constraintVertical_bias="0.0" />
    <EditText
        android:id="@+id/textCurso"
        android:layout_width="378dp"
        android:layout_height="43dp"
        android:gravity="center_vertical"
        android:hint="Curso"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textFecNac"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>